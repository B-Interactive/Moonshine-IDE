package actionScripts.interfaces;

import flash.ui.ContextMenu;
import flash.events.Event;

interface IContextMenuBridge {

    function getContextMenu():ContextMenu;
    function getContextMenuItem(title:String, listener:(d:Dynamic)->Void = null, forState:String=null, hasSeparatorBefore:Bool=false):Dynamic;
    function subMenu(menuOf:Dynamic, menuItem:Dynamic = null, extendedListner:(d:Dynamic)->Void=null):Void;
    function addItem(menuOf:Dynamic, menuItem:Dynamic):Void;
    function removeAll(menuOf:Dynamic):Void;
    
}