		}
		else
		{
			//myLoader.removeEventListener(MouseEvent.CLICK, handleClick);
			//myLoader.buttonMode = myLoader.useHandCursor = false;
		}
    }
		 
	private function handleClick(event:MouseEvent):void
	{
		navigateToURL(new URLRequest(_link),"_blank");
	}
    
