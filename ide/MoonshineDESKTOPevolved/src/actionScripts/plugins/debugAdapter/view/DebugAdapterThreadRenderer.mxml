<s:MXAdvancedDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark">
	<s:states>
		<s:State name="labelOnly"/>
		<s:State name="threadControls"/>
	</s:states>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout padding="6" verticalAlign="middle"/>
		</s:layout>
		<s:Label includeIn="labelOnly" text="{stackTraceLabel}"/>
		<s:Label excludeFrom="labelOnly" text=""/>
	</s:Group>

	<fx:Script>
		<![CDATA[
			import actionScripts.debugAdapter.vo.StackFrame;
			import mx.controls.listClasses.BaseListData;

			[Bindable]
			private var stackTraceLabel:String;

			override public function set data(value:Object):void
			{
				super.data = value;
				this.currentState = (value is StackFrame) ? "labelOnly" : "threadControls";
			}

			override public function set listData(value:BaseListData):void
			{
				super.listData = value;
				this.stackTraceLabel = this.listData ? this.listData.label : "";
			}
		]]>
	</fx:Script>
</s:MXAdvancedDataGridItemRenderer>