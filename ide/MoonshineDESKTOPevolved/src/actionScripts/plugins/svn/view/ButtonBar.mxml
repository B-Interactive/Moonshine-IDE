<mx:VBox 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:s="library://ns.adobe.com/flex/spark" 
	width="100%"
	verticalGap="0" 
	>
	
	<mx:HRule id="buttonBarLine"
			width="100%"
			strokeWidth="1"
			strokeColor="0x303030" />
	
		<mx:HBox id="buttonBar"
			width="100%"
			height="41"
			bottom="0"
			backgroundColor="0x444444"
			paddingRight="10"
			paddingTop="0"
			horizontalAlign="right"
			verticalAlign="middle">
			<mx:filters>
				<mx:DropShadowFilter
					alpha=".5" 
					angle="90" 
					blurX="0" 
					blurY="7" 
					strength="1"
					distance="1"
					inner="true" />
			</mx:filters>
			
			<s:Button 
				id="commitButton"
				label="Commit"
				styleName="darkButton"/>
			
			<s:Button 
				id="cancelButton"
				label="Cancel"
				styleName="darkButton"/>
			
		</mx:HBox>
		
</mx:VBox>
